# Environment variables for TradingAgents Crypto

# LLM Provider Configuration
LLM_PROVIDER=openrouter
BACKEND_URL=https://openrouter.ai/api/v1

# OpenRouter API Key (required for OpenRouter provider)
# Get your API key from https://openrouter.ai/keys
API_KEY=your_openrouter_api_key_here

# Model Selection
QUICK_THINK_LLM=openai/gpt-4o-mini
DEEP_THINK_LLM=openai/gpt-4o

# Alternative free models for OpenRouter:
# QUICK_THINK_LLM=meta-llama/llama-3.1-8b-instruct:free
# DEEP_THINK_LLM=meta-llama/llama-3.1-70b-instruct

# Debate and discussion settings
MAX_DEBATE_ROUNDS=1
MAX_RISK_DISCUSS_ROUNDS=1

# Tool settings
ONLINE_TOOLS=True

# FinnHub API Key (optional but recommended for stock data)
FINNHUB_API_KEY=your_finnhub_api_key_here

# CoinGecko API Key (optional for enhanced crypto data)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Port (for Docker/Cloud Run)
PORT=8080